largest = None
smallest = None
while True:
    inp = raw_input("Enter a number: ")
    if inp == "done" : break
    try:
        value = float(inp)       
    except:
        print "Invalid input"
        continue 
    if largest is None:
       largest = value
    if smallest is None :
       smallest = value
    if value > largest:
    	largest = value
    elif value < smallest:
       smallest = value

def done(largest,smallest):
    print "Maximum is", int(largest)  
    print "Minimum is", int(smallest)
done(largest,smallest)
